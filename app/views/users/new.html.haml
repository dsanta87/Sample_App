- provide(:title, "Sign up")
%h1 Sign Up
.row
  .col-md-6.col-md-offset-3
    = form_for (@user) do |f|
      = f.label :name
      = f.text_field :name
      -# %br
      = f.label :email
      = f.text_field :email
      -# %br
      = f.label :password
      = f.text_field :password
      -# %br
      = f.label :pasword_confirmation, "Confirm password"
      = f.text_field :password_confirmation
      -# %br
      = f.submit "Create my account", class: "btn btn-primary"
